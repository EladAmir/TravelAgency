@model TravelAgencyProject.Models.Payment

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <div class="bg-image"
         style="background-image: url('https://images.unsplash.com/photo-1436491865332-7a61a109cc05?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2074&q=80'); height: 100vh">
        <div>
            <h1>Your Reservation</h1>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Flight Number:
                    <br />
                </dt>

                <dd>
                   @ViewBag.flightnumber
                </dd>

                <dt>
                    First Name:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FirstName)
                </dd>
                <dt>
                    Last Name:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LastName)
                </dd>
                <dt>
                    Email:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    ID number:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.id)
                </dd>

                <dt>
                    Phone number:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>

                <dt>
                    Total price:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TotalPrice)
                </dd>

                <dt>
                    Credit card number:
                    <br />
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CardNumber)
                </dd>

            </dl>
        </div>
    </div>
</body>